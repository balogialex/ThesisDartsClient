<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileDartsApp"
             xmlns:cv="clr-namespace:MobileDartsApp.Converters"
             x:Class="MobileDartsApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <cv:BoolToImageConverter x:Key="BoolToImageConverter" />
            <cv:BoolToBoolConverter x:Key="BoolToBoolConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
