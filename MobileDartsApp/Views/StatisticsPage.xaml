<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDartsApp.Views.StatisticsPage"
             Title="Statisztikák"
             Padding="16"
             Shell.BackgroundColor="{DynamicResource MyDarkBlue}"
             Shell.TitleColor="{DynamicResource MyOrange}"
             Shell.ForegroundColor="{DynamicResource MyOrange}"
             BackgroundColor="{DynamicResource MyDeepDarkBlue}">

    <ContentPage.Resources>
        <Style x:Key="H1" TargetType="Label">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="{DynamicResource MyOrange}"/>
        </Style>

        <Style x:Key="H2" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextColor" Value="#CCFFFFFF"/>
        </Style>

        <Style x:Key="StatValue" TargetType="Label">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>

        <Style x:Key="Card" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="{DynamicResource MyDarkBlue}"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="BorderColor" Value="#1AFFFFFF"/>
        </Style>

        <Style x:Key="PickerChip" TargetType="Picker">
            <Setter Property="TextColor" Value="{DynamicResource MyOrange}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="BackgroundColor" Value="#1AFFFFFF"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" RowSpacing="14">

        <VerticalStackLayout Grid.Row="0" Spacing="4">
            <Label Text="Meccs statisztikák" Style="{StaticResource H1}"/>
            <BoxView HeightRequest="2" BackgroundColor="{DynamicResource MyOrange}" Opacity="0.3"/>
        </VerticalStackLayout>

        <Frame Grid.Row="1" Style="{StaticResource Card}">
            <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*"
                  BindingContext="{Binding GameStats}">

                <Label Grid.Column="1" 
                       Grid.Row="2" 
                       Text="{Binding CheckoutPercent, 
                                      StringFormat='{0} %'}" 
                       Style="{StaticResource StatValue}"/>
                
                <Label Grid.Column="0" Grid.Row="0" Text="Átlag" Style="{StaticResource H2}" VerticalOptions="Center"/>
                <Label Grid.Column="1" Grid.Row="0" Text="{Binding Average, StringFormat='{0:N2}'}" Style="{StaticResource StatValue}"/>

                <Label Grid.Column="0" Grid.Row="1" Text="Első 9 átlag" Style="{StaticResource H2}" VerticalOptions="Center"/>
                <Label Grid.Column="1" Grid.Row="1" Text="{Binding First9Average, StringFormat='{0:N2}'}" Style="{StaticResource StatValue}"/>

                <Label Grid.Column="0" Grid.Row="2" Text="Kiszálló" Style="{StaticResource H2}" VerticalOptions="Center"/>
                
            </Grid>
        </Frame>

        <VerticalStackLayout Grid.Row="2" Spacing="4">
            <Label Text="Leg statisztikák" 
                   Style="{StaticResource H1}"/>
            <BoxView HeightRequest="2" BackgroundColor="{DynamicResource MyOrange}" Opacity="0.3"/>
        </VerticalStackLayout>

        <Frame Grid.Row="3" Style="{StaticResource Card}" Padding="14"
               IsEnabled="{Binding IsNotRefreshingData}">
            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="5">
                <Label Grid.Column="0" Text="Leg statisztikái:" FontSize="20" TextColor="White" VerticalOptions="Center"/>
                <Frame Grid.Column="1" BackgroundColor="#22FFFFFF" CornerRadius="20" Padding="0" HasShadow="False">
                    <Picker Title="Legek"
                            ItemsSource="{Binding Legs}"
                            ItemDisplayBinding="{Binding LegIndex, StringFormat='Leg {0}'}"
                            SelectedItem="{Binding SelectedLeg}"
                            Style="{StaticResource PickerChip}"/>
                </Frame>
            </Grid>
        </Frame>

        <Frame Grid.Row="4" Style="{StaticResource Card}">

            <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*"
                  BindingContext="{Binding LegStats}">
                <Label Grid.Column="1" 
                       Grid.Row="2" 
                       Text="{Binding CheckoutPercent, 
                              StringFormat='{0} %'}" 
                       Style="{StaticResource StatValue}"/>

                <Label Grid.Column="0" Grid.Row="0" Text="Átlag" Style="{StaticResource H2}" VerticalOptions="Center"/>
                <Label Grid.Column="1" Grid.Row="0" Text="{Binding Average, StringFormat='{0:N2}'}" Style="{StaticResource StatValue}"/>

                <Label Grid.Column="0" Grid.Row="1" Text="Első 9 átlag" Style="{StaticResource H2}" VerticalOptions="Center"/>
                <Label Grid.Column="1" Grid.Row="1" Text="{Binding First9Average, StringFormat='{0:N2}'}" Style="{StaticResource StatValue}"/>

                <Label Grid.Column="0" Grid.Row="2" Text="Kiszálló" Style="{StaticResource H2}" VerticalOptions="Center"/>
            </Grid>
        </Frame>

    </Grid>
</ContentPage>
