<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MobileDartsApp.ViewModels"
             x:Class="MobileDartsApp.Views.SettingsPage"
             x:DataType="vm:SettingsPageViewModel"
             Title="Beállítások"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="{DynamicResource MyDarkBlue}"
             Shell.TitleColor="{DynamicResource MyOrange}"
             Shell.ForegroundColor="{DynamicResource MyOrange}"
             BackgroundColor="{DynamicResource MyDarkBlue}">
    <ContentPage.Resources>
        <Style x:Key="H1" TargetType="Label">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="{DynamicResource MyOrange}"/>
        </Style>
        <Style x:Key="Hint" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextColor" Value="#CCFFFFFF"/>
        </Style>

        <Style x:Key="Card" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="{DynamicResource MyBlue}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="BorderColor" Value="#14000000"/>
        </Style>

        <Style x:Key="PickerStyle" TargetType="Picker">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextColor" Value="{DynamicResource MyOrange}"/>
            <Setter Property="BackgroundColor" Value="{DynamicResource MyBlue}"/>
            <Setter Property="HeightRequest" Value="56"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SectionLabel" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextColor" Value="{DynamicResource MyOrange}"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="SeaGreen"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="HeightRequest" Value="56"/>
            <Setter Property="Padding" Value="16,10"/>
        </Style>
        <Style x:Key="RoundIconButton" TargetType="Button">
            <Setter Property="WidthRequest" Value="48"/>
            <Setter Property="HeightRequest" Value="48"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="BackgroundColor" Value="#22FFFFFF"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>

    </ContentPage.Resources>

    <Grid Padding="10" RowSpacing="10" RowDefinitions="auto,auto,auto,auto">
        <VerticalStackLayout Grid.Row="0" Spacing="4">
            <Label Text="Játékmód" Style="{StaticResource H1}"/>
            <Label Text="Válaszd ki a módot és a legek formátumát, majd indítsd a játékot." Style="{StaticResource Hint}"/>
        </VerticalStackLayout>

        <Frame Grid.Row="1" Style="{StaticResource Card}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Válassz játékmódot" Style="{StaticResource SectionLabel}"/>
                <Picker Style="{StaticResource PickerStyle}"
                        Title="Játékmód"
                        ItemsSource="{Binding Gamemodes}"
                        SelectedItem="{Binding SelectedGameMode}"
                        ItemDisplayBinding="{Binding .}"
                        AutomationProperties.Name="Játékmód kiválasztása"/>
            </VerticalStackLayout>
        </Frame>

        <Frame Grid.Row="2" Style="{StaticResource Card}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Legek száma és formátum" Style="{StaticResource SectionLabel}"/>

                <Grid ColumnDefinitions="*,auto,auto,auto,auto" ColumnSpacing="10" RowDefinitions="auto, 30, auto">

                    <Picker Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                            Style="{StaticResource PickerStyle}"
                            Title="Válassz leg formátumot"
                            ItemsSource="{Binding LegFormats}"
                            SelectedItem="{Binding SelectedLegFormat}"
                            ItemDisplayBinding="{Binding .}"
                            AutomationProperties.Name="Leg formátum kiválasztása"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Legek:" VerticalTextAlignment="Center" TextColor="#E6FFFFFF"/>
                    <Button Grid.Row="2" Grid.Column="1" Text="-" Command="{Binding MinusLeg}" Style="{StaticResource RoundIconButton}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding SelectedNumberOfLegs}" Value="0">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding SelectedNumberOfLegs}" Value="1">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <Frame Grid.Row="2" Grid.Column="2" CornerRadius="10" BackgroundColor="{DynamicResource MyBlue}" BorderColor="{DynamicResource MyOrange}" Padding="0">
                        <Label Text="{Binding SelectedNumberOfLegs, FallbackValue=1}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HorizontalTextAlignment="Center"
                               WidthRequest="50"
                               FontAttributes="Bold"/>
                    </Frame>

                    <Button Grid.Row="2" Grid.Column="3" Text="+" Command="{Binding PlusLeg}" Style="{StaticResource RoundIconButton}"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <Grid Grid.Row="3">
            <Button Text="Start Game"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding StartGame}"
                    SemanticProperties.Hint="Játék indítása a kiválasztott beállításokkal"/>
        </Grid>
    </Grid>
</ContentPage>
