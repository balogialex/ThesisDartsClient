<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDartsApp.Views.OnlineSettingsPage"
             Title="Online meccs beállításai"
             Shell.BackgroundColor="{DynamicResource MyDarkBlue}"
             Shell.TitleColor="{DynamicResource MyOrange}"
             Shell.ForegroundColor="{DynamicResource MyOrange}">

    <ContentPage.Resources>
        <Style x:Key="GrayButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="LightGray"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="FontSize" Value="22"/>
        </Style>
        <Style x:Key="SectionLabel" TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="FontAttributes" Value="Italic"/>
            <Setter Property="FontSize" Value="22"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto" Padding="10" RowSpacing="10">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#000033" Offset="0"/>
                <GradientStop Color="#000066" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <VerticalStackLayout Grid.Row="1">

            <HorizontalStackLayout Spacing="10">
                <Label Text="Pont: " Style="{StaticResource SectionLabel}"/>
                <Label Text="{Binding SelectedGameMode}" Style="{StaticResource SectionLabel}" FontAttributes="Bold"/>
            </HorizontalStackLayout>
            <Frame BorderColor="White" BackgroundColor="#000033" Padding="20">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <Button Text="301" Style="{StaticResource GrayButton}" Command="{Binding SelectGamemode}" CommandParameter="301"/>
                    <Button Text="501" Style="{StaticResource GrayButton}" Command="{Binding SelectGamemode}" CommandParameter="501"/>
                    <Button Text="701" Style="{StaticResource GrayButton}" Command="{Binding SelectGamemode}" CommandParameter="701"/>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="2">
            <HorizontalStackLayout Spacing="10">
                <Label Text="Leg: " Style="{StaticResource SectionLabel}"/>
                <Label Text="{Binding SelectedLegFormat}" Style="{StaticResource SectionLabel}" FontAttributes="Bold"/>
                <Label Text="{Binding SelectedNumberOfLegs}" Style="{StaticResource SectionLabel}" FontAttributes="Bold"/>
            </HorizontalStackLayout>
            <Frame BorderColor="White" BackgroundColor="#000033" Padding="20">
                <HorizontalStackLayout Spacing="10">
                    <Button Text="-" Command="{Binding MinusLeg}" Margin="0,30,0,30" TextColor="Black" BackgroundColor="LightGray"/>
                    <Frame BorderColor="White" BackgroundColor="LightGray" HeightRequest="70">
                        <Label Text="{Binding SelectedNumberOfLegs}" 
                           TextColor="Black"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           WidthRequest="20"
                           HorizontalTextAlignment="Center"
                           FontSize="22"
                           FontAttributes="Bold"/>
                    </Frame>
                    <Button Text="+" Command="{Binding PlusLeg}" Margin="0,30,10,30" TextColor="Black" BackgroundColor="LightGray"/>
                    <VerticalStackLayout Spacing="10">
                        <Button Text="Best of" Command="{Binding SelectLegFormat}" CommandParameter="bestof" Style="{StaticResource GrayButton}"/>
                        <Button Text="First to" Command="{Binding SelectLegFormat}" CommandParameter="firstto" Style="{StaticResource GrayButton}" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>


        <Button Text="Várószoba elkészítése"
                Command="{Binding CreateLobby}"
                BackgroundColor="#8E2DE2"
                TextColor="White"
                CornerRadius="10"
                HorizontalOptions="Fill"
                Grid.Row="4"
                FontSize="28"/>
    </Grid>

</ContentPage>